# FOR LOCAL DEVELOPMENT ONLY
# Populate the fields in this file and rename as .env

# MongoDB Configuration
MONGODB_URI=mongodb://{REPLACE_WITH_USERNAME}:{REPLACE_WITH_PASSWORD}@localhost:27017/{REPLACE_WITH_DB}?authSource=admin
MONGO_INITDB_ROOT_USERNAME=REPLACE_WITH_USERNAME
MONGO_INITDB_ROOT_PASSWORD=REPLACE_WITH_PASSWORD
MONGO_INITDB_DATABASE=REPLACE_WITH_DB

# Redis
REDIS_URI=REPLACE_WITH_REDIS_URL

# Server Configuration
NODE_ENV=development
PORT=3000

# JWT Configuration
JWT_SECRET=REPLACE_WITH_JWT_SECRET_KEY
JWT_EXPIRES_IN=24h

# OAuth Configuration
OAUTH_PROVIDER=REPLACE_WITH_OAUTH_PROVIDER # Supported: Google, GitHub, Microsoft, Okta
OAUTH_CLIENT_ID=REPLACE_WITH_OAUTH_CLIENT_ID
OAUTH_CLIENT_SECRET=REPLACE_WITH_OAUTH_CLIENT_SECRET
OAUTH_REDIRECT_URL=http://localhost:3000/auth/callback

# Okta Domain - OMIT IF NOT USING OKTA
OKTA_DOMAIN=REPLACE_WITH_OKTA_DOMAIN

# Organization Configuration
ORGANIZATION_NAME=REPLACE_WITH_YOUR_COMPANY_NAME
ALLOWED_DOMAINS=REPLACE_WITH_COMMA_SEPARATED_DOMAINS
BOOTSTRAP_ADMIN_EMAIL=REPLACE_WITH_ADMIN_EMAIL

# Logging
LOG_LEVEL=info